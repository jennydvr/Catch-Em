<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   xmlns:botones="fxg.botones.*"
				   minWidth="21" minHeight="21"
				   alpha.disabled="0.5"
				   width="40" height="40">
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<botones:oscuro includeIn="over" width="100%" height="100%" alpha="0.7"/>
	<botones:claro includeIn="down" width="100%" height="100%" alpha="0.7"/>
	<botones:pausa includeIn="up,disabled,over,down" width="100%" height="100%"/>
	
</s:SparkButtonSkin>