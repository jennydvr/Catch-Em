<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   width="800" height="600" backgroundColor="#C7C3C3"
			   currentState="tigre"
			   xmlns:components="componentes.*"
			   creationComplete="playSound()">
	<fx:Style source="assets/Estilo.css"/>
	
	<fx:Script>
		<![CDATA[
			import clases.*;
			
			import flash.media.*;
			
			import mx.collections.*;
			import mx.controls.Alert; 
			
			
			
			[Bindable]
			public var arregloSexo:ArrayList = new ArrayList ([ {label:"Select"},{label:"Female", data:"Femenino"},
				{label:"Male", data:"Masculino"}]);
			[Bindable]
			public var arregloColor:ArrayList = new ArrayList ([{label:"Select"},{label:"Blue", data:"Azul"},
				{label:"Red", data:"Rojo"}]);
			[Bindable]
			public var animalSource:CasaExterior;
			[Bindable]
			public var animal:Animal = new Animal();
			[Bindable]
			public var max:int = 1000; //Inicializamos el nivel maximo
			public var baul: Baul = new Baul();
			[Bindable]
			public var objetosComida:ArrayCollection = new ArrayCollection();
			[Bindable]
			public var objetosJuguete: ArrayCollection = new ArrayCollection();
			[Bindable]
			public var objetosPesca:ArrayCollection = new ArrayCollection();
			[Bindable]
			public var objetosSiembra:ArrayCollection = new ArrayCollection();
			//Musica
			[Bindable]
			[Embed(source="src/assets/swoosh.mp3")]
			public var soundClass:Class;   
			[Bindable]
			[Embed(source="src/assets/click.mp3")]
			public var soundClick:Class;
			[Bindable]
			[Embed(source="src/assets/Main theme.mp3")]
			public var sndCls:Class;
			public var snd:Sound = new sndCls() as Sound; 
			public var sndChannel:SoundChannel;
			
			public function playSound():void {
				sndChannel=snd.play(0,int.MAX_VALUE);
			}   
			public function stopSound():void{
				sndChannel.stop()
			}
			
			/* Funcion donde verificamos el tipo del animal escogido y a partir de este
			/  inicializamos las imagenes correspondientes a la casa particular y 
		    /  la informacion del animal.
			*/
			public function informacionAnimal(event:MouseEvent):void{
			// Inicializamos la informacion de la casa Exterior
		    animalSource= new CasaExterior();
			// Primero vamos a la funcion donde creamos todos los objetos posibles
		    // y llenamos el baul
	
			 if (currentState== "tigre"){
				 animalSource.animal="tigre";
				 animalSource.imagenBaul="skins.casa.baul";
				 animalSource.imagenCasa="src/assets/home.gif";
				 animalSource.imagenSiembra="src/assets/num2.gif";
				 animalSource.imagenLago="skins.casa.lago";
				 animalSource.imagenPlato="skins.casa.plato";
				 // Habilidades
				 animal.habFuerza=25;
				 animal.habIntel=30;
				 animal.habVelocidad=90;
			 }
			 else if (currentState == "dino"){
				 animalSource.animal="dino";
				 animalSource.imagenBaul="skins.casa.baul";
				 animalSource.imagenCasa="src/assets/home.gif";
				 animalSource.imagenSiembra="src/assets/num1.gif";
				 animalSource.imagenLago="skins.casa.lago";
				 animalSource.imagenPlato="skins.casa.plato";
				 
				 //Habilidades
				 animal.habFuerza=90;
				 animal.habIntel=20;
				 animal.habVelocidad=15;
				 
			 }
			 else if(currentState =="buho"){
				 animalSource.animal="buho";
				 animalSource.imagenBaul="skins.casa.baul";
				 animalSource.imagenCasa="src/assets/home.gif";
				 animalSource.imagenSiembra="src/assets/num1.gif";
				 animalSource.imagenLago="skins.casa.lago";
				 animalSource.imagenPlato="skins.casa.plato";
				 
				 //Habilidades
				 animal.habFuerza=15;
				 animal.habIntel=90;
				 animal.habVelocidad=30;				 
			 }
			 else if(currentState == "lobo"){
				 animalSource.animal="lobo";
				 animalSource.imagenBaul="skins.casa.baul";
				 animalSource.imagenCasa="src/assets/home.gif";
				 animalSource.imagenSiembra="src/assets/num1.gif";
				 animalSource.imagenLago="skins.casa.lago";
				 animalSource.imagenPlato="skins.casa.plato";
				 
				 //Habilidades
				 animal.habFuerza=60;
				 animal.habIntel=50;
				 animal.habVelocidad=40;				 
			 }
			 
			 //Creamos al animal
			 
			 animal.color=color.selectedItem.label;
			 animal.dinero=500;
			 animal.diversion = 20;
			 animal.dormir= 100;
			 animal.hambre= 50;
			 animal.higiene=50;
			 animal.experiencia= 100;
			 
			 
			 animal.nivel=1;
			 animal.nivelMax = 1000;
			 animal.nombre= nombre.text;
			 animal.sexo=sexo.selectedItem.label;
			 animal.tipo=currentState;
 
			 animal.miBaul = baul;
		
			 menuPrincipal.selectedChild=casa;
	
			}
			
			/*Funcion donde inicializamos todos los objetos utiles 
			/ Comida, Anzuelo, Juguete, Semilla
			*/
			public function inicializarObjetos(event:MouseEvent):void{
				//5 comidas
				[Embed(source="src/assets/apple.png")]
			     var imagen:String;
			 var c1:Comida = new Comida("Apple","30",imagen,10,5);
			 [Embed(source="src/assets/meat.png")]
			 var imagen2:String
			 var c2:Comida = new Comida("Meat","70",imagen2,20,10);
			 
			 var c3:Comida = new Comida("Wheat", "60","src/assets/trigo.png",20,10);
			 var c4:Comida = new Comida("Fish", "50", "src/assets/fish.png",20,10);
			 var c5:Comida = new Comida("Bone", "20", "src/assets/bone.png",10,5); 
				objetosComida.addItem(c1);
/* 				objetosComida.addItem(c2);
				objetosComida.addItem(c3);
				objetosComida.addItem(c4);
				objetosComida.addItem(c5); */
			 // 4 jugetes
				[Embed(source="src/assets/baseball.png")]
				var imagen3:String
			 var j1:Juguete = new Juguete("Baseball","60",imagen3,10,30);
			/*  var j2:Juguete = new Juguete("Football","30","src/assets/ball.png",25,30); */
				 objetosJuguete.addItem(j1);
				/*  objetosJuguete.addItem(j2); */
			 // 1 caÃ±a
				 [Embed(source="src/assets/fishing.png")]
				 var imagen4:String
			 var p1:Anzuelo = new Anzuelo("First fish road","100",imagen4,20,60);
				 objetosPesca.addItem(p1);
			 // 1 semilla
			 var s1:Semilla = new Semilla("Tomato seed","90","src/assets/plant.png",20,80);
			 	 objetosSiembra.addItem(s1);
				
				 //Baul inicial para todos
				
				 baul.objetos.addItem(c1);
				// baul.objetos.addItem(c2);
			//	 baul.objetos.addItem(j2);
				 baul.objetos.addItem(p1);
				 baul.objetos.addItem(s1);
				
				 informacionAnimal(event);
			 }
			
			
			/* Funcion para movernos por las imagenes de las mascotas. Flecha izquierda
			/
			*/
			public function cambiarAnimalIzq():void{
				if (currentState=="tigre"){
					currentState = "lobo";
				}
				else if(currentState=="lobo"){
					currentState="buho";
				}
				else if(currentState=="buho"){
					currentState="dino";
				}
				else{
					currentState="tigre";
				}
			}
			/* Funcion para movernos por las imagenes de las mascotas. Flecha derecha
			/
			*/			
			public function cambiarAnimalDer():void{
				if (currentState == "tigre"){
					currentState="dino";
				}
				else if (currentState =="dino"){
					currentState="buho";
				}
				else if (currentState =="buho"){
					currentState="lobo";
				}
				else{
					currentState="tigre";
				}
			}
			
		]]>
	</fx:Script>
	
	
	<s:states>
		<s:State name="tigre"/>
		<s:State name="dino"/>
		<s:State name="buho"/>
		<s:State name="lobo"/>
	</s:states>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:SoundEffect id="sonidoDesplazo" 
						useDuration="false" 
						loops="0"
						source="{soundClass}"/>
		
		<mx:SoundEffect id="sonidoClick"
						useDuration="false"
						loops="0"
						source="{soundClick}"/>
	</fx:Declarations>
	<!-- Menu superior -->
	
	

	<mx:ViewStack id="menuPrincipal" x="4" y="0" width="100%">
		
		
		<s:NavigatorContent id="pagPrincipal" x="141" y="52" width="800" height="600" color="#FBFAFA"
							contentBackgroundColor="#FFFFFF"
							>
			<s:Image x="6" y="15" width="800" height="600" smooth="true" smoothingQuality="default"
					 source="assets/menu.gif"/>
			
			<s:Image  x="-18" y="26" width="800" height="100" smooth="true" source="assets/catchem.gif"
					/>
			<mx:TabNavigator x="392" y="128" width="345" height="330" backgroundColor="#FB8800"
							 borderColor="#000000" dropShadowVisible="true">
				
				<!-- Primera pestana -->
				<s:NavigatorContent width="100%" height="100%" icon="@Embed('assets/num1.gif')">
					<s:Label x="142" y="67"
							 x.tigre="104" y.tigre="82" fontFamily="Verdana"
							 fontSize="26" text="Welcome!"/>
				</s:NavigatorContent>
				
				
				<!-- Segunda pestana -->
				<s:NavigatorContent width="343" height="251" icon="@Embed('assets/num2.gif')"
									styleName="contenido" >
					
					<s:layout>
						<s:BasicLayout/>
					</s:layout>
					<s:FormHeading left="10" top="-4" label="Create a new account!" color="#FBF5F5"
								   fontFamily="Verdana"/>
					<s:Form x="11" y="31" width="297" height="203" styleName="Estilo">
						<s:layout>
							<s:FormLayout/>
						</s:layout>
						<s:FormItem width="224" height="41" label="Name" color="#FFFFFF"
									fontFamily="Verdana">
							<s:layout>
								<s:FormItemLayout/>
							</s:layout>
							<s:TextInput id="nombreUsuario" width="130"/>
						</s:FormItem>
						<s:FormItem label="Email" color="#FFFFFF" fontFamily="Verdana">
							<s:TextInput id="email"/>
						</s:FormItem>
						<s:FormItem label="User" color="#FFFFFF" fontFamily="Verdana">
							<s:TextInput id="usuario"/>
						</s:FormItem>
						<s:FormItem label="Password" color="#FFFFFF" fontFamily="Verdana">
							<s:TextInput id="password" displayAsPassword="true"/>
						</s:FormItem>
					</s:Form>
				</s:NavigatorContent>
			
				<!-- Tercera pestana -->
				<s:NavigatorContent width="100%" height="100%" icon="@Embed('assets/num3.gif')" >
					<s:ComboBox id="sexo" x="113" y="26" color="#000000" fontFamily="Verdana" fontSize="11"
								selectedIndex="0" dataProvider="{arregloSexo}"/>
					<s:Label x="62" y="26" fontSize="14" fontWeight="bold" text="Sex"
							 verticalAlign="middle"/>
					
					<s:ComboBox id="color" x="113" y="57" color="#000000" fontFamily="Verdana" fontSize="11"
								selectedIndex="0" dataProvider="{arregloColor}"/>
					<s:Label x="62" y="57" fontSize="14" fontWeight="bold" text="Color"
							 verticalAlign="middle"/>
					
					
					<s:Label x="57" y="120" fontFamily="Verdana" fontSize="20" text="Name your pet!"/>
					<s:Label x="28" y="0" width="200" height="15" fontFamily="Verdana" fontSize="15"
							 fontWeight="bold" text="Pet Information"/>
					<s:TextInput id="nombre" x="57" y="158" />
				</s:NavigatorContent>
				

			</mx:TabNavigator>

				
			
			  <s:Image id="imagenTigre" includeIn="tigre" x="157" y="221" source="assets/gato.png"/>
			  <s:Image id="imagenDino" includeIn="dino" x="157" y="221" source="assets/dino.png"/>
		 	  <s:Image id="imagenBuho" includeIn="buho" x="157" y="221" source="assets/num3.gif"/>
			  <s:Image id="imagenLobo" includeIn="lobo" x="157" y="221" source="assets/num1high.gif"/>
		   
			<s:Label x="83" y="176" color="#CC3B3B" fontFamily="Verdana" fontSize="33"
					 text="Select your pet"/>
			
			<!-- La transicion de las fotos de los animales -->
			<s:Button x="105" y="410" chromeColor="#67E14F" icon="assets/leftArrow.gif"
					  click="cambiarAnimalIzq()" mouseDownEffect="{sonidoDesplazo}"/>
			<s:Button x="235" y="410" chromeColor="#67E14F" icon="assets/rightArrow.gif"
					  click="cambiarAnimalDer()" mouseDownEffect="{sonidoDesplazo}"/>
			
			<s:Button x="411" y="466" width="141" height="27" label="Get Started!" chromeColor="#B23F00"
					  click="inicializarObjetos(event)" color="#FDFDFD" cornerRadius="2"
					  enabled="true" fontFamily="Verdana" fontSize="16" fontWeight="bold"
					  skinClass="spark.skins.spark.ButtonSkin"
					  mouseDownEffect="{sonidoClick}"/>
		
			
		
			
		</s:NavigatorContent>
		
		<!-- Casa exterior -->
		
		<s:NavigatorContent id="casa">
			<components:casaExterior width="800" height="600" 
									 animalSource="@{animalSource}" 
									 animal="@{animal}"
									 objetosComida="{objetosComida}"
									 objetosJuguete="{objetosJuguete}"
									 sndChannel="{sndChannel}"
									 snd="{snd}">
				
				
		    </components:casaExterior>
		</s:NavigatorContent>

				
	
	</mx:ViewStack>
	
	

	
</s:Application>
